generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id         Int     @id @default(autoincrement())
  name       String
  apellido   String
  usuario    String
  email      String  @unique
  password   String
  confirmed  Boolean @default(false)
  user_token String?
}

model Token {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  dateCreate DateTime @default(now())
  idUsuario  Int
}
